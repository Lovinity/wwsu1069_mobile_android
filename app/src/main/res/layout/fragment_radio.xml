<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/fragmentMobileRadio"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="106.9FM Radio"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/dataJSONDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/playRadioButton"
        android:background="@color/crimson"
        android:hint="Current JSON Data for current Radio Feed"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ImageView
        android:id="@+id/WWSUlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragmentMobileRadio"
        android:layout_above="@id/dataJSONDisplay"
        android:background="@color/white"
        android:src="@drawable/wwsu1069fm"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/playRadioButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:drawableEnd="@drawable/ic_play_music"
        android:onClick="playRadio" />

    <Button
        android:id="@+id/stopRadioButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:drawableEnd="@drawable/ic_stop_music"
        android:onClick="stopRadio">

    </Button>


</RelativeLayout>